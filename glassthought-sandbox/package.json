{
  "name": "glassthought-sandbox",
  "displayName": "glassthought-sandbox",
  "description": "Glassthought Sandbox",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "glassthought-sandbox.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "glassthought-sandbox.showSystemInfo",
        "title": "Show System Info"
      },
      {
        "command": "glassthought-sandbox.showProjectStats",
        "title": "Show Project Stats"
      },
      {
        "command": "glassthought-sandbox.showQuickTip",
        "title": "Show Quick Tip"
      },
      {
        "command": "glassthought-sandbox.showAbout",
        "title": "About Glassthought"
      }
    ],
    "menus": {
      "menuBar/edit": [
        {
          "submenu": "glassthought.submenu",
          "group": "9_glassthought"
        }
      ],
      "menuBar/view": [
        {
          "submenu": "glassthought.submenu",
          "group": "9_glassthought"
        }
      ],
      "editor/title": [
        {
          "submenu": "glassthought.submenu",
          "group": "navigation"
        }
      ],
      "glassthought.submenu": [
        {
          "command": "glassthought-sandbox.showSystemInfo",
          "group": "1_info@1"
        },
        {
          "command": "glassthought-sandbox.showProjectStats",
          "group": "1_info@2"
        },
        {
          "command": "glassthought-sandbox.showQuickTip",
          "group": "2_help@1"
        },
        {
          "command": "glassthought-sandbox.showAbout",
          "group": "3_about@1"
        }
      ]
    },
    "submenus": [
      {
        "id": "glassthought.submenu",
        "label": "Glassthought",
        "icon": "$(lightbulb)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  }
}
